<% include ../partials/header %>



 <div class="container">
     <header>
         <div class="container">
             <h1><i class="fa fa-tree" aria-hidden="true"></i> YelpCamp</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>
         </div>
     </header>
     
     <div class="row" style=" flex-wrap: wrap;" id="image-row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6" id="campground">
                <a href="/campgrounds/<%= campground._id %>">
                <div class="thumbnail" style="background-image: url(<%= campground.image %>);" id="thumbnail-img">
                    <div id="caption">
                   <h4><%= campground.name %></h4>
                   </div>
                </div>
                </a>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>